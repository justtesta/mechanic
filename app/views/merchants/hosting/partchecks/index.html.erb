<h3 class="page-header">部分核销/调整利润</h3>

<div class="row">
  <div class="col-md-7">
	<%= index_for [ :merchants, :hosting, @partchecks ], class: "table table-hover data-tables" do |i| %>
      <%= i.attribute :quoted_price %>
      <%= i.attribute :quantity %>
      <%= i.attribute :mechanic_income %>
      <%= i.attribute :procedure_price %>
      <%= i.attribute :remark %>
      <%= i.attribute :created_at, format: :short %>
      <%= i.attribute :confirm_by  %>
    <% end %>

  <%= bootstrap_simple_form_for([ :merchants, :hosting, @partcheck ]) do |f| %>
      <%= f.error_messages %>
      <%= f.hidden_field :order_id %>
      <%= f.input :quoted_price %>
      <%= f.input :quantity %>
      <%= f.input :mechanic_income %>
      <%= f.input :Confirm_type, collection: enum_option_pairs(Partcheck, :Confirm_type) %>
      <%= f.input :procedure_price %>
      <%= f.input :remark, input_html: { rows: 2 } %>
       <input type="button"  value="清除" class="btn btn-primary" onclick = "clear_form();" id="clear__button"/>
      <%= f.button :submit, "确定", class: "btn btn-primary pull-right" %>
    <% end %>
   
  </div>
</div>

<script language="javascript">
  function  clear_form(){
    $("#partcheck_quoted_price").val("");
    $("#partcheck_quantity").val("");
    $("#partcheck_mechanic_income").val("");
    $("#partcheck_procedure_price").val("");
    $("#partcheck_remark").val("");
}
</script>