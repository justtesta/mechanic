<h3 class="page-header">
  核销码管理
  <small><%= link_to "添加核销码", new_merchants_admin_merchant_path %></small>
</h3>

<%= index_for [ :merchants,  @numbers ], class: "table table-hover data-tables" do |i| %>
  <%= i.attribute :pwd_number_default %>
  <%= i.attribute :created_at, format: :short %>
  <%= i.attribute :updated_at, format: :short %>     

  <%= i.actions :edit do |a| %>
    <% if current_merchant != i.object %>
      <% if i.object.active %>
        <%= a.action_link :inactive, url: inactive_merchants_admin_merchant_path(i.object), method: :post, confirm: "你确定要锁定这个账户？" %>
      <% else %>
        <%= a.action_link :active, url: active_merchants_admin_merchant_path(i.object), method: :post, confirm: "你确定要激活这个账户？" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
